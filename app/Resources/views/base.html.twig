<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Statistiques Euromillion{% endblock %}</title>

    <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
    {#<link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-theme.min.css') }}">#}

    <script type="text/javascript" charset="utf-8" src="{{ asset('js/jquery.min.js') }}"></script>
    <script type="text/javascript" charset="utf-8" src="{{ asset('js/chart.min.js') }}"></script>
    <script type="text/javascript" charset="utf-8" src="{{ asset('js/bootstrap.min.js') }}"></script>
</head>
<body>
{% block body %}
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('homepage') }}">{{ block('title') }}</a>

                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="dropdown{{ app.request.attributes.get('_route') in ['number-rate', 'star-rate'] ? ' active' }}">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Statistiques <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li{{ app.request.attributes.get('_route') == 'number-rate' ? ' class="active"' }}>
                                    <a href="{{ path('number-rate') }}">Fréquence d'apparition des numéros</a>
                                </li>
                                <li{{ app.request.attributes.get('_route') == 'star-rate' ? ' class="active"' }}>
                                    <a href="{{ path('star-rate') }}">Fréquence d'apparition des étoiles</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li{{ app.request.attributes.get('_route') == 'update-data' ? ' class="active"' }}>
                            <a href="{{ path('update-data') }}"><i class="glyphicon glyphicon-refresh"></i> Faire la mise à jour</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {% block content %}{% endblock %}
    </div>
{% endblock %}
</body>
</html>